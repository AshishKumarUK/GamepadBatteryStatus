<playniteControls:PluginUserControl x:Class="DualSenseBattery.Views.AutoSystemBatteryReplacementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:playniteControls="clr-namespace:Playnite.SDK.Controls;assembly=Playnite.SDK"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="42">
    
    <Grid x:Name="ContentRoot" Visibility="Collapsed">
        <!-- PS5 Reborn-style bar (scaled) -->
        <Grid x:Name="BarHost" Margin="7,0,0,0" HorizontalAlignment="Left" RenderTransformOrigin="0,0">
            <Grid.RenderTransform>
                <ScaleTransform ScaleX="0.28" ScaleY="1" />
            </Grid.RenderTransform>
            <Rectangle x:Name="Bar" Height="14" RadiusX="5" RadiusY="5" Fill="White" Width="0" />
        </Grid>
        <!-- Icon glyph (default and PS5 Reborn outline) -->
        <TextBlock x:Name="Icon" FontSize="42" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</playniteControls:PluginUserControl>
