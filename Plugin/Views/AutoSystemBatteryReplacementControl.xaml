<playniteControls:PluginUserControl x:Class="DualSenseBattery.Views.AutoSystemBatteryReplacementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:playniteControls="clr-namespace:Playnite.SDK.Controls;assembly=Playnite.SDK"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="42">
    
    <Grid x:Name="ContentRoot" Visibility="Collapsed">
        <!-- Match system battery exactly: only the glyph icon (keep hidden bar element for code-behind references) -->
        <Grid x:Name="BarHost" Visibility="Collapsed">
            <Rectangle x:Name="Bar" Visibility="Collapsed" />
        </Grid>
        <!-- Icon glyph from theme resources -->
        <TextBlock x:Name="Icon" FontSize="42" HorizontalAlignment="Center" VerticalAlignment="Center" />
    </Grid>
</playniteControls:PluginUserControl>
