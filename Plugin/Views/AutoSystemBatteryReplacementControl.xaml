<playniteControls:PluginUserControl x:Class="DualSenseBattery.Views.AutoSystemBatteryReplacementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:playniteControls="clr-namespace:Playnite.SDK.Controls;assembly=Playnite.SDK"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="42">
    
    <Grid x:Name="ContentRoot" Visibility="Collapsed">
        <!-- Battery fill bar (behind icon) to mimic PS5 Reborn's BatteryStatus rectangle -->
        <Grid x:Name="BarHost" RenderTransformOrigin="0,0" Visibility="Collapsed">
            <Rectangle x:Name="BatteryFill"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Height="14"
                       Width="0"
                       Visibility="Collapsed" />
        </Grid>

        <!-- Icon glyph to match PS5 Reborn (overlays bar) -->
        <TextBlock x:Name="Icon"
                   FontSize="42"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" />

        <!-- Optional hidden percentage text (used by code-behind) -->
        <TextBlock x:Name="Txt"
                   Visibility="Collapsed" />
    </Grid>
</playniteControls:PluginUserControl>
