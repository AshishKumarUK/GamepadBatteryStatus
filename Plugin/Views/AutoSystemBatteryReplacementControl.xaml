<playniteControls:PluginUserControl x:Class="DualSenseBattery.Views.AutoSystemBatteryReplacementControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:playniteControls="clr-namespace:Playnite.SDK.Controls;assembly=Playnite.SDK"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="42">
    
    <Grid x:Name="ContentRoot" Visibility="Collapsed">
        <!-- We replicate the exact theme icon by copying properties from theme resources (BatteryStatus*) at runtime -->
        <TextBlock x:Name="Icon" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</playniteControls:PluginUserControl>
